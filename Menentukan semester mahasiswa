from datetime import datetime

tahun_masuk = int(input("Masukkan tahun masuk mahasiswa: "))
tahun_sekarang = datetime.now().year
lama_kuliah = tahun_sekarang - tahun_masuk
semester = (lama_kuliah * 2) + 1

if lama_kuliah >= 0:
    print(f"Mahasiswa yang masuk tahun {tahun_masuk} saat ini berada di semester {semester}.")
else:
    print("Tahun masuk tidak valid.")
